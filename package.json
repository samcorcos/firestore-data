  "author": "Sam Corcos <sam@corcos.io>",
  "license": "MIT",
  "peerDependencies": {
    "react": "^16.8.6"
  },
  "devDependencies": {
    "@types/node": "^12.0.1",
    "@types/react": "^16.8.17",
    "nodemon": "^1.19.0",
    "ts-node": "^8.1.0",
    "typescript": "^3.4.5"
  }
}
